<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dymchenko.reports">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:hardwareAccelerated="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.Reports">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2115559775024778~5527655741"/>
        <activity
            android:name=".ActivityForPDF"
            android:label="@string/title_activity_for_p_d_f"
            android:theme="@style/Theme.Reports.NoActionBar"></activity>
        <activity
            android:name=".ui.Summary"
            android:label="@string/title_activity_summary"
            android:theme="@style/Theme.Reports.NoActionBar" />
        <activity
            android:name=".PdfActivity"
            android:label="@string/title_activity_pdf"
            android:theme="@style/Theme.Reports.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Reports.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>